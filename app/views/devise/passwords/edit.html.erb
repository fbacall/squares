<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.input :password, autofocus: true, autocomplete: "off", label: "New password" %>
    <% if @minimum_password_length %>
        <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p><br />
    <% end %>

    <%= f.input :password_confirmation, autocomplete: "off", label: "Confirm new password" %>

    <%= f.button :submit, "Change my password" %>
<% end %>

<%= render "devise/shared/links" %>
